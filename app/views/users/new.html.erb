<h1>Signup</h1>

<div class="row">
    <div class="col-sm-6 col-sm-offset-1">
      <%= form_for :user, url: '/users' do |f| %>

        <div class="form-group row">
          <%= f.label :first_name, class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.text_field :first_name, class: 'form-control', placeholder: "first name" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :last_name, class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.text_field :last_name, class: 'form-control', placeholder: "last name"%>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :email, class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.text_field :email, class: 'form-control', placeholder: "email" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password, class: "col-sm-2 col-form-label" %>
          <div class="col-sm-10">
            <%= f.text_field :password, class: 'form-control', id: "inputPassword", placeholder: "password" %>
          </div>
        </div>

        <div class="form-group row">
          <%= f.label :password_confirmation, class: "col-sm-2 col-form-label"%>
          <div class="col-sm-10">
            <%= f.text_field :password_confirmation, class: 'form-control', id: "inputPassword", placeholder: "Enter password again"%>
          </div>
        </div>

        <%= f.submit "Submit" %>

      <% end %>

    </div>
</div>





