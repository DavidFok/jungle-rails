<h1>Login</h1>

<div class="row">
  <div class="col-sm-6 col-sm-offset-1">
    <%= form_tag '/login' do %>

       <div class="form-group row">
          <label class="col-sm-2 col-form-label">Email</label>
          <div class="col-sm-10">
            <%= text_field_tag :email %>
          </div>
        </div>

        <div class="form-group row">
          <label class="col-sm-2 col-form-label">Password</label>
          <div class="col-sm-10">
            <%= text_field_tag :password %>
          </div>
        </div>


      <%= submit_tag "Submit" %>

    <% end %>
  </div>
</div>

