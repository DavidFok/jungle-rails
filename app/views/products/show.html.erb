<section class="products-show">

  <header class="page-header">
    <h1><%= link_to @product.category.name, @product.category %> &raquo; <%= @product.name %></h1>
  </header>

  <article class="product-detail">

    <div class="row">

      <div class="col-sm-4">
        <%= image_tag @product.image.url, class: 'main-img' %>
      </div>

      <div class="col-sm-8">
        <dl class="dl-horizontal">
          <dt>Name</dt>
          <dd><%= @product.name %></dd>
          <dt>Description</dt>
          <dd><%= @product.description %></dd>
          <dt>Quantity</dt>
          <dd><%= @product.quantity %></dd>
          <dt>Price</dt>
          <dd><%= @product.price %></dd>
          <dt>Reviews</dt>
          <% if @product.reviews.length > 0  %>
            <dd>
              <% @star_count.to_i.times do  %>
                <span class="glyphicon glyphicon-star"></span>
              <% end %>
              <% @blank_count.to_i.times do %>
                <span class="glyphicon glyphicon-star-empty"></span>
              <% end %>
            </dd>
            <% @product.reviews.each do |review| %>
              <dd>
                <%= review.user.first_name %>
                <%= review.user.last_name %>
                said:
                <%= review.description %>
                <% if review.user_id == current_user.id %>
                  <td>
                  <%= link_to fa_icon('trash'), product_review_path(:product_id => @product.id, :id => review.id), class: 'btn btn-xs btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
                  </td>
                <% end %>
              </dd>
            <% end %>
          <% else %>
            <dd>Be the first one to review this product!! YayðŸ¤—</dd>
          <% end%>
          <dt>Submit your review</dt>
          <% if current_user %>
            <dd>
              <%= form_for ([@product, @review]) do |form| %>
                <div class="form-group">
                  <%= form.label :rating %>
                  <%= form.select :rating, options_for_select([1, 2, 3, 4, 5]), class: 'form-control' %>
                </div>

                <div class="form-group">
                  <%= form.label :review %>
                  <%= form.text_area :description, class: 'form-control' %>
                </div>
                <%= form.submit 'Submit review', class: 'btn btn-primary' %>
              <% end %>
            </dd>
          <% else %>
            <dd>
              <%= link_to 'Login', login_path, class: 'btn btn-success btn-sm' %>
            </dd>
          <% end %>
        </dl>
      </div>
    </div>

  </article>

</section>