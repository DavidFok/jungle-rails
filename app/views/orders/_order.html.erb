<% @order.line_items.each do |item| %>
<tr>
  <td>
    <%= image_tag item.product.image.tiny %>
  </td>
  <td>
    <h4><%= item.product.name %></h4>
    <br>
    <p><%= item.product.description %></p>
  </td>
  <td>
    <%= item.product.price %>
  </td>
  <td>
    <%= item.quantity %>
  </td>
  <td>
    <%= humanized_money_with_symbol (item.quantity * item.item_price.cents.to_f / 100) %>
  </td>
</tr>
<% end %>